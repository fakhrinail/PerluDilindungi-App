<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/imageViewNews__thumbnail"
        android:layout_width="85dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.434"
        tools:src="@drawable/img_placeholder" />

    <TextView
        android:id="@+id/textViewNews__title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textFontWeight="700"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewNews__thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Lorem Ipsum" />

    <TextView
        android:id="@+id/textViewNews__date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewNews__thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/textViewNews__title"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Lorem Ipsum" />

</androidx.constraintlayout.widget.ConstraintLayout>